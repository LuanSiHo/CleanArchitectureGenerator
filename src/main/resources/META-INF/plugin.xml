<idea-plugin>
    <id>org.sendo.CleanArchitectureGenerator</id>
    <name>Clean Architect Generator</name>
    <vendor email="luanhs@sendo.vn" url="https://www.sendo.vn/">sendo</vendor>

    <description><![CDATA[
    Library for generating package for clean architecture. It generates data, domain, presentation package.
    It also generates bloc, state and event class for bloc architecture.
    Usage Instruction: Clean architecture: Code -> Generate Feature OG
    ]]></description>


    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action id="action.GenerateFeatureAction" class="action.GenerateFeatureAction" text="Generate Feature OG">
            <add-to-group group-id="CodeMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>